# Development Environment Configuration
# Operating Mode: simulated (synthetic data generation)

# Operating Mode
OPERATING_MODE=simulated

# Application Configuration
APP_NAME="Trading Platform Development"
ENVIRONMENT=development
DEBUG=true

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_platform_dev
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=5
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=20

# JWT Configuration
JWT_SECRET_KEY=dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
SESSION_CLEANUP_INTERVAL_MINUTES=5

# Security
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=3
ACCOUNT_LOCK_DURATION_MINUTES=15

# InfluxDB Configuration
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=my-super-secret-auth-token
INFLUXDB_ORG=trading-platform
INFLUXDB_BUCKET=market-data

# Service Ports
API_GATEWAY_PORT=8000
WEBSOCKET_SERVICE_PORT=8001
MARKET_DATA_ENGINE_PORT=8002
ORDER_PROCESSOR_PORT=8003
ANALYTICS_SERVICE_PORT=8004

# Simulator Configuration
SIMULATOR_DEFAULT_SPEED=1.0
SIMULATOR_AUTO_START=true
SIMULATOR_SYMBOLS=RELIANCE,TCS,INFY,HDFCBANK,ICICIBANK
SIMULATOR_START_PRICE=1000
SIMULATOR_NUM_TICKS=10000
SIMULATOR_VOLATILITY=0.02
SIMULATOR_TREND=0.0
