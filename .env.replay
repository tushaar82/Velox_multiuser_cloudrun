# Replay Environment Configuration
# Operating Mode: replay (historical data replay)

# Operating Mode
OPERATING_MODE=replay

# Application Configuration
APP_NAME=Trading Platform (Replay)
ENVIRONMENT=replay
DEBUG=true

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_platform_replay
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=5
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1
REDIS_MAX_CONNECTIONS=20

# JWT Configuration
JWT_SECRET_KEY=replay-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Session Configuration
SESSION_TIMEOUT_MINUTES=120
SESSION_CLEANUP_INTERVAL_MINUTES=10

# Security
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=10
ACCOUNT_LOCK_DURATION_MINUTES=5

# InfluxDB Configuration
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=my-super-secret-auth-token
INFLUXDB_ORG=trading-platform
INFLUXDB_BUCKET=market-data-replay

# Service Ports
API_GATEWAY_PORT=8000
WEBSOCKET_SERVICE_PORT=8001
MARKET_DATA_ENGINE_PORT=8002
ORDER_PROCESSOR_PORT=8003
ANALYTICS_SERVICE_PORT=8004

# Replay Configuration
REPLAY_DATA_DIR=./replay_data
REPLAY_DEFAULT_SPEED=10.0
REPLAY_AUTO_START=false
REPLAY_SAVE_STATE=true
REPLAY_STATE_DIR=./replay_sessions
