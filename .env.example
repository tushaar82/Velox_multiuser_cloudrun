# Application Configuration
APP_NAME=Trading Platform
ENVIRONMENT=development
DEBUG=false

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_platform
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# PgBouncer Configuration (optional)
USE_PGBOUNCER=false
PGBOUNCER_HOST=localhost
PGBOUNCER_PORT=6432

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CLUSTER_MODE=false
REDIS_CLUSTER_NODES=
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# JWT Configuration
JWT_SECRET_KEY=change-me-in-production-use-strong-random-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
SESSION_CLEANUP_INTERVAL_MINUTES=5

# Security
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=3
ACCOUNT_LOCK_DURATION_MINUTES=15

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# InfluxDB Configuration
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=
INFLUXDB_ORG=trading-platform
INFLUXDB_BUCKET=market-data

# Google Cloud Configuration
GCP_PROJECT_ID=
GCP_SECRET_MANAGER_ENABLED=false

# Service Ports
API_GATEWAY_PORT=8000
WEBSOCKET_SERVICE_PORT=8001
MARKET_DATA_ENGINE_PORT=8002
ORDER_PROCESSOR_PORT=8003
ANALYTICS_SERVICE_PORT=8004
